<script component>

	exports.name = 'Delay';
	exports.group = 'Triggers';
	exports.version = '4';
	exports.icon = 'ti ti-hourglass';
	exports.author = 'Total.js';
	exports.config = { delay: 1000 };
	exports.inputs = [{ id: 'input', name: 'Input' }];
	exports.outputs = [{ id: 'output', name: 'Output' }];
  exports.meta = {readonly: true, remove: false};
	const SharedMemory = REQUIRE('definitions/shared.js');

	exports.make = function(instance, config) {

		var items = [];
		var timeout;
		var paused = false;

		instance.checkstatus = function() {
			instance.status({ pending: items.length });
		};

		instance.trigger = function() {

			timeout = null;

			if (paused)
				return;

			var msg = items.pop();
			if (msg) {
				instance.checkstatus();
				msg[0].send('output',msg[1]);
				timeout = clearTimeout(timeout);
				timeout = setTimeout(instance.trigger, config.delay);
			}
		};

		instance.message = async function($) {
      var data = SharedMemory.extractData($);
			var session = new SharedMemory($);
      await session.ready;
			if(!(session.sessionId && session.reply && typeof session.reply == "function")){
				session.bye(true);
      }else{
        data = session.data;
      }
			items.push([$,instance.newmessage(data)]);
			if (timeout)
				instance.checkstatus();
			else
				timeout = setTimeout(instance.trigger, config.delay);
		};

		instance.pause = function(is) {
			paused = is;
			!is && instance.trigger();
		};

		instance.destroy = function() {
			timeout && clearTimeout(timeout);
			timeout = null;
		};

		instance.configure = function() {
			timeout && clearTimeout(timeout);
			timeout = setTimeout(instance.trigger);
		};

	};

</script>

<style>
