<script component>

	exports.name = 'Minutely';
	exports.group = 'Triggers';
	exports.version = '1';
	exports.icon = 'ti ti-retweet';
	exports.author = 'Total.js';
	exports.config = { random: true, type: 'now', data: '' };
	exports.outputs = [{ id: 'output', name: 'Output' }];
  exports.meta = {readonly: true, remove: false};
  const SharedMemory = REQUIRE('definitions/shared.js');//_main.exports;

	exports.make = function(instance, config) {

		var counter;

		instance.trigger = function() {

			var val;

			switch (config.type) {
				case 'now':
					val = NOW;
					break;
				case 'counter':
					val = counter;
					break;
				case 'number':
					val = config.random ? U.random() : config.data.parseFloat();
					break;
				case 'buffer':
					try {
						val = config.random ? Buffer.from(U.random_string()) : Buffer.from(config.data, 'base64');
					} catch (e) {
						instance.throw(e);
					}
					break;
				case 'date':
					val = config.random ? NOW.add('-' + U.random(500, 10)) : config.data.parseDate();
					break;
				case 'object':
					try {
						val = config.random ? {} : (SharedMemory.createFunction('variables','return (' + config.data+');'))({...instance.main.variables2,...instance.main.variables,});
					} catch (e) {
						instance.throw(e);
					}
					break;
				case 'boolean':
					val = config.random ? U.random() % 2 === 0 : config.data === 'true' || config.data === 'on' || config.data === '1';
					break;
				default:
					val = config.random ? U.random_string(20) : config.data;
					break;
			}

			instance.send('output', val);
		};

		instance.service = function(count) {
			counter = count;
			instance.trigger();
		};

	};

</script>

<script>
	FUNC.ftimer_exec = function(el) {
		SETTER('websocket/send', { TYPE: 'trigger', id: el.attrd2('id') });
	};
</script>

